{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "ignore": [
      "dist/**",
      "coverage/**",
      "node_modules/**",
      "example/node_modules/**",
      "example/dist/**",
      "eslint.config.js",
      "example/eslint.config.js"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "indentStyle": "space",
      "indentWidth": 2,
      "trailingCommas": "all",
      "semicolons": "always"
    }
  }
}
